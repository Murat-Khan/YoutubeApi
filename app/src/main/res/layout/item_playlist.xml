<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_playlist"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:riv_corner_radius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        />
    
    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ems="3"
        android:textStyle="normal"
        android:fontFamily="@font/fjalla_one"
        android:ellipsize="end"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@id/img_playlist"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/playlist_video_count"
        android:layout_width="0dp"
        android:layout_height="16sp"
        app:layout_constraintStart_toEndOf="@id/img_playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_name"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        />
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_playlist"
        app:layout_constraintStart_toStartOf="@id/img_playlist"
        app:layout_constraintEnd_toEndOf="@id/img_playlist"
        app:layout_constraintBottom_toBottomOf="@id/img_playlist"
        android:text="playlist"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textAlignment="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>